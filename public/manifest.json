{
  "manifest_version": 3,
  "name": "Atrium Tabs",
  "version": "0.1.0",
  "description": "Minimalist tab group manager",
  "background": {
    "service_worker": "src/background.ts"
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Atrium Tabs"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Open Atrium Tabs Popup"
    },
    "jump-to-group-1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Jump to Group 1"
    },
    "jump-to-group-2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Jump to Group 2"
    },
    "jump-to-group-3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "Jump to Group 3"
    }
  },
  "icons": {
    "128": "vite.svg"
  }
}